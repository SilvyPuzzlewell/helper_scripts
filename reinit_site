#!/bin/bash
set -e
if [ $# -lt 1 ]; then
    VENV_PATH=/home/ron/prace/nr-docs/.venv/bin/activate
else
    VENV_PATH=/home/ron/prace/$1/.venv/bin/activate
fi
SCRIPT_PATH=$(realpath "$0")
SCRIPT_DIR=$(dirname "$SCRIPT_PATH")

. $VENV_PATH
cd $SCRIPT_DIR

for file in "$(pwd)"/current_token_*; do
  if [ -e "$file" ]; then
    echo "Deleting: $file"
    rm $file
  fi
done

invenio db drop --yes-i-know
invenio db create
invenio index destroy --yes-i-know
invenio index init
invenio oarepo cf init
invenio communities custom-fields init
invenio files location default s3://default --default
invenio oarepo fixtures load
